cmake_minimum_required(VERSION 2.8.2)

project(googletest-download NONE)

include(ExternalProject)
ExternalProject_Add(googletest
        URL                 https://github.com/google/googletest/archive/release-1.8.1.zip
        TIMEOUT             10
		SOURCE_DIR          "${PROJECT_BINARY_DIR}/third_party/googletest/src"
		BINARY_DIR          "${PROJECT_BINARY_DIR}/third_party/googletest/build"
		CONFIGURE_COMMAND   ""
		BUILD_COMMAND       ""
		INSTALL_COMMAND     ""
		TEST_COMMAND        ""
		LOG_DOWNLOAD		ON
		LOG_CONFIGURE		ON
		LOG_BUILD			ON
)
